<h3 class="text-center page-title">Interque Job Postings</h3>

<%# debug listing[:params] %>

<div>
  <% @listings.each do |listing| %>
    <div class="job-posting col-md-4 col-md-offset-4" data-pk="<%= listing.id %>">
      <div>
        <h4 class="listing-title" data-pk="<%= listing.id %>"><%= listing.title %></h4>
      </div>
      <div>
        Organization: <span class="listing-organization" data-pk="<%= listing.id %>"><%= listing.organization %></span>
      </div><br>
      <div>
        Description: <span class="listing-description" data-pk="<%= listing.id %>"><%= listing.description %></span>
      </div><br>

      <div>
        Contact: <span class="listing-email" data-pk="<%= listing.id %>"><%= listing.email %></span>
      </div>
      <br>
      <div>
        Salary: <span class="listing-salary"><%= listing.convert_range(listing.salary) %></span>
      </div>
      <br>
      <div>Location: <%= listing.city %>, <%= listing.state %></div>
      <br>
      <%#if listing.user_id == current_user.id %>
        <div class="links">
          <%= link_to 'Edit', edit_listing_path(listing) %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %><br>
        </div>
      <%# end %>
      <br>
    </div>
    <br>
  <% end %>

  <br>
</div>
        <div class="digg_pagination text-center"><%= will_paginate %></div>
<%# if current_user %>

<br>

<%# else %>

