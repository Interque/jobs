<h3 class="text-center page-title">Interque Job Postings</h3>

<%# debug listing[:params] %>

<div>
  <% @listings.each do |listing| %>
    <div class="job-posting col-md-4 col-md-offset-4" data-pk="<%= listing.id %>">
      <div>
        <h4 class="text-center"> <span class=<%= current_user == listing.user || current_user && current_user.admin ? "listing-title" : "non-editable" %> data-pk="<%= listing.id %>"><%= listing.title %> </span></h4>
      </div>
      <div>
        <strong>Organization:</strong> <span class=<%= current_user == listing.user || current_user && current_user.admin ? "listing-organization" : "non-editable" %> data-pk="<%= listing.id %>"><%= listing.organization %></span>
      </div><br>
    <div class="hide-stuff">
      <div>
        <strong>Description:</strong> <span class=<%= current_user == listing.user || current_user && current_user.admin ? "listing-description" : "non-editable" %> data-pk="<%= listing.id %>"><%= listing.description.html_safe %></span>
      </div><br>

      <div>
        <strong>Contact:</strong> <span class="listing-email" data-pk="<%= listing.id %>"><%= listing.email %></span>
      </div>
      <br>
      <div>
        <strong>Salary:</strong> <span class="listing-salary"><%= listing.convert_range(listing.salary) %></span>
      </div>
      <br>
    </div>
      <div style="padding-bottom: 10px;"><strong>Location:</strong> <%= listing.city %>, <%= listing.state %>
      <br>
      </div>
      <div style="padding-bottom: 5px;"><strong>Posted:</strong> <%= time_ago_in_words(listing.updated_at) %> ago.</div>

      <br>

        <div class="links text-center">
          <%= link_to 'View Full Listing', listing_path(listing) %><br>
      <% if (current_user && listing.user_id == current_user.id) || (current_user && current_user.admin) %>
          <%= link_to '', edit_listing_path(listing), class: "edit-button glyphicon glyphicon-edit" %>
          <%= link_to '', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-ban-circle" %><br>
      <% end %>
        </div>
      <br>
    </div>
    <br>
  <% end %>

  <br>
</div>
        <div class="digg_pagination text-center"><%= will_paginate %></div>
<%# if current_user %>

<br>

<%# else %>

