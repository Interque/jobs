<%= form_for(@listing = Listing.new) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id if current_user  %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <p class="requirement">* All fields are required</p>
    <%# f.label :title %><br>
    <%= f.text_field :title, placeholder: "title" %>
  </div>
  <div class="field">
    <%# f.label :description %><br>
    <%= f.bootsy_area  :description, placeholder: "description", editor_options: { image: false } %>
  </div>
  <div class="field">
    <%# f.label :organization %><br>
    <%= f.text_field :organization, placeholder: "organization" %>
  </div>
  <div class="field">
    <%# f.label :email %><br>
    <%= f.text_field :email, placeholder: "email" %>
  </div>
  <div class="field salary-field">
    <%= f.label :salary, "Salary Range" %><br>
    <%= f.select :salary, options_for_select(Listing::RANGE_OPTIONS) %><br>
    <%# f.number_field :salary %>
  </div>
  <div class="field">
    <%# f.label :city, "Location: City" %><br>
    <%= f.text_field :city, placeholder: "city" %>
  </div>
  <div class="field salary-field">
    <%= f.label :state, "Location: State" %><br>
    <%= f.select :state, options_for_select(@listing.us_states, "FL") %><br>
    <%# f.number_field :salary %>
  </div>
  <div class="actions">
    <%= f.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>
